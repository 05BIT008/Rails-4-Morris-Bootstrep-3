<div class="content">
  <div id="pad-wrapper">
    <!-- morris stacked chart -->
    <div class="row">
      <div class="col-md-12">
        <h4 class="title">Morris.js Dynamic Data</h4>
      </div>
      <div class="col-md-12">
        <h5>Orders</h5>
        <br>
        <%= content_tag :div, "", id: "orders_chart", data: {orders: Order.chart_data} %>
      </div>
    </div>
    <div class="table-products section">
      <div class="row head">
        <div class="col-md-12">
          <h4>Orders</h4>
        </div>
      </div>

      <div class="row">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="col-md-3"><span class="line"></span>Number</th>
              <th class="col-md-3"><span class="line"></span>Purchased</th>
              <th class="col-md-3"><span class="line"></span>Shipping</th>
              <th class="col-md-3"><span class="line"></span>Total Price</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.purchased_at ? order.purchased_at.strftime("%B %e, %Y %H:%M") : "--" %></td>
                <td class="description"><%= order.shipping ? "Yes" : "No" %></td>
                <td><%= number_to_currency order.price %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <ul class="pagination">
        <%= will_paginate @orders %>
      </ul>
    </div>
  </div>
</div>
